<style>
  .mycolour { background-color: #343a40; /* Dark background color */ } .mar {
  margin: 20px 0; /* Margin for spacing */ } .pad { padding: 15px; /* Padding
  for the form */ } .top{ margin-top: 100px; }.data{
  margin-left: 700px; margin-top: 100px;
}

</style>

{{#if data}}
  <h5 class=" data" style="position: absolute;">{{data}}</h5>
{{/if}}
<div
  class="container d-flex align-items-center justify-content-center top rounded"
  style="min-height: 80vh;"
>
  <div class="container w-75 h-auto bg-light p-4 mar shadow rounded">
    <div class="row">
      <div class="col-xl-5 me-0">
        <img src="/images/login.gif" alt="Login Image" class="img-fluid" />
      </div>
      <div class="col-xl-6 ms-5 px-1 py-5 pad">
        <form action="" method="post">
          <div class="form-group row mt-5 mb-3">
            <label
              for="inputEmail3"
              class="col-sm-2 col-form-label"
            >Email:</label>
            <div class="col-sm-10">
              <input
                type="email"
                name="email"
                class="form-control"
                id="inputEmail3"
                placeholder="Email"
              />
            </div>
          </div>
          <div class="form-group row mb-3">
            <label
              for="inputPassword3"
              class="col-sm-2 col-form-label"
            >Password:</label>
            <div class="col-sm-10">
              <input
                type="password"
                name="password"
                class="form-control"
                id="inputPassword3"
                placeholder="Password"
              />
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <div class="col-sm-10 text-center">
              <button type="submit" class="btn btn-primary">Register</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>